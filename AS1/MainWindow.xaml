<Window x:Class="AS1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AS1"
        mc:Ignorable="d"
        Title="MainWindow" Height="610" Width="1070"
         WindowStyle="None"
        BorderBrush="Black"
        BorderThickness="1"
        AllowsTransparency="True" 
        WindowState="Maximized"
        SizeToContent="Manual">
    <Grid>
        <Menu Height="46"   VerticalAlignment="Top">
            <CalendarButton Content="Admin" Click="CalendarButton_Click_1" FontSize="16"/>
            <CalendarButton Content="Sales" FontSize="16" Click="CalendarButton_Click_2"/>
            <CalendarButton Content="Exit" Click="CalendarButton_Click" FontSize="16"/>
        </Menu>
        <Button x:Name="admin" Content="Admin Panel" Margin="308,352,308,0" FontSize="72" FontWeight="Bold" Click="admin_Click" Height="212" VerticalAlignment="Top"/>
        <Button x:Name="sales" Content="Sales" Margin="308,115,308,0" VerticalAlignment="Top" Height="212" FontSize="72" FontWeight="Bold" Click="sales_Click"/>

    </Grid>
</Window>
